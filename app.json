{
  "expo": {
    "name": "TripHub",
    "slug": "TripHub",
    "scheme": "triphub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "O app precisa acessar a câmera para capturar fotos",
        "NSPhotoLibraryAddUsageDescription": "O app precisa salvar fotos na galeria",
        "NSLocationWhenInUseUsageDescription": "O app precisa acessar sua localização para mostrar sua posição no mapa",
        "NSLocationAlwaysUsageDescription": "O app precisa acessar sua localização mesmo quando estiver em segundo plano",
        "NSCalendarsUsageDescription": "O app precisa acessar o calendário para criar eventos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-sqlite"
    ],
    "extra": {
      "FIREBASE_API_KEY": "AIzaSyBdCICQLChnG2Fmxjmrp27KJaIp5RV5ItE",
      "FIREBASE_AUTH_DOMAIN": "expostore-8dfee.firebaseapp.com",
      "FIREBASE_PROJECT_ID": "expostore-8dfee",
